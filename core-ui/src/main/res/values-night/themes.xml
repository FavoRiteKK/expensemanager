<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ExpenseManager" parent="Base.Theme.ExpenseManager">
        <!--selection controls.-->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>

        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorSurface">@color/black_900</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:colorBackground">@color/black_900</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>
</resources>