<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.ExpenseManager">
        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">?attr/colorSecondary</item>
    </style>

    <style name="Theme.ExpenseManager" parent="Base.Theme.ExpenseManager" />

    <style name="Base.Theme.ExpenseManager" parent="Base.Theme.MaterialThemeBuilder">
        <!--selection controls.-->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/blue_500</item>

        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>

        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black_900</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black_900</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Type attributes -->
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">?colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            #EEEEEE
        </item>

        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.Colored
        </item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>
</resources>